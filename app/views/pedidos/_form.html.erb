<%=  form_for(@pedido) do |f| %>
    <% if @pedido.errors.any? %>
        <div id="error_explanation"> </div>
        <h2><%= pluralize(@pedido.errors.count, "error") %> Prohibido guardar este pedido:</h2>

        <ul>
          <% @pedido.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :cliente_id %>
      <%= f.select('cliente_id', Cliente.all.collect{|c| [c.nombres, c.id]}) %>
    </div>
    <div class="field">
      <%= f.label :fecha_pedido %>
      <%= f.date_select :fecha_pedido %>
    </div>
    <div class="field">
      <%= f.label :fecha_entrega %>
      <%= f.date_select :fecha_entrega %>
    </div>
    <div class="field">
      <%= f.label :estado %>
      <%= f.select :estado,[['Entregado', true], ['No entregado', false]] %>
    </div>
    <div class="field">
      <%= f.label :descripcion %>
      <%= f.text_area :descripcion %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
