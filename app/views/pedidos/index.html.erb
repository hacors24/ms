
<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listado <small>Pedidos</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">pedidos</li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_pedido_path(@pedido), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              Nuevo Pedido
            <% end %>
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
    <th>Cliente</th>
    <th>Fecha Pedido</th>
    <th>Fecha Entrega</th>
    <th>Estado</th>
    <th>descripcion</th>
    <th>Mostrar</th>
    <th>Editar</th>
    <th>Eliminar</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%= content_tag_for(:tr, @pedidos) do |pedido| %>
              <td><%=pedido.cliente.nombres%></td>
              <td><%= pedido.fecha_pedido %> </td>
              <td> <%=pedido.fecha_entrega %> </td>
              <td> <% if pedido.estado == true %>
                   Entregado
                  <%else%>
                  No Entregado
                  <%end%></td>
              <td> <%=pedido.descripcion %> </td>
                <td><span class="glyphicon glyphicon-play" aria-hidden="true"><%= link_to 'Mostrar', pedido %></td>
                <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"><%= link_to 'Editar', edit_pedido_path(pedido) %></td>
                <td><span class="glyphicon glyphicon-trash" aria-hidden="true"><%= link_to 'Eliminar', pedido, method: :delete, data: { confirm: 'Desea eliminar el pedido?' } %></td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @posts %>
    </div>
    <%= will_paginate @posts, :container => false %>
</div>
</section>