<div class="panel panel-primary">
  <h3> Pedidos</h3>
  <span class="tn btn-success btn-lg bt pull-right glyphicon glyphicon-plus"><%= link_to 'Crear pedido',new_pedido_path %></span>
  <%= link_to 'Volver al Menu', controller: 'welcome' %>
</div>

<table class="table">
  <thead>
  <tr>
    <th>Cliente</th>
    <th>Fecha Pedido</th>
    <th>Fecha Entrega</th>
    <th>Estado</th>
    <th>descripcion</th>
    <th>Mostrar</th>
    <th>Editar</th>
    <th>Eliminar</th>
  </tr>
  </thead>
  <tbody>
  <% @pedidos.each do |pedido|%>
      <tr>
        <td><%=pedido.cliente.nombres%></td>
        <td><%= pedido.fecha_pedido %> </td>
        <td> <%=pedido.fecha_entrega %> </td>
        <td> <% if pedido.estado == true %>
              Entregado
              <%else%>
              No Entregado
              <%end%></td>
        <td> <%= pedido.descripcion %></td>
        <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar', pedido %> </td>
        <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar',edit_pedido_path(pedido) %></td>
        <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to'Eliminar', pedido , method: :delete, data: {confirm: 'Esta seguro?'} %> </td>
      </tr>
  <%end%>
  </tbody>
</table>
<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @posts %>
    </div>
    <%= will_paginate @posts, :container => false %>
</div>