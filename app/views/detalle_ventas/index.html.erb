<div class="panel panel-primary">
  <h3> Detalle de venta</h3>
  <span class="tn btn-success btn-lg bt pull-right glyphicon glyphicon-plus"><%= link_to 'Crear Detalle de Venta',new_detalle_venta_path %></span>
</div>

<table class="table">
  <thead>
  <tr>
    <th>Cantidad</th>
    <th>Precio Unitario</th>
    
  </tr>
  </thead>
  <tbody>
  <% @detalle_ventas.each do |detalle_venta|%>
      <tr>
        <td><%=detalle_venta.cantidad %></td>
        <td><%=detalle_venta.precio_unitario %> </td>
        
        <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar', :action => :show, :id => detalle_venta.id %> </td>
        <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar',:action => :edit, :id => detalle_venta.id%></td>
        <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to'Eliminar', {:controller => :detalle_ventas, :action => 'destroy', :id => detalle_venta.id }, :method => :delete , data: {confirm: 'Esta seguro?'} %> </td>
      </tr>
  <%end%>
  </tbody>
</table>
