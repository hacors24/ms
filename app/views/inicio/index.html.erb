
<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listado <small>Articulos</small></h1>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
              <th>Imagen</th>
              <th>Nombre</th>
              <th>Stock</th>
              
              <th>Precio</th>
             
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%= content_tag_for(:tr, @articulos) do |articulo| %>


 
              <td><%= image_tag articulo.imagen2.url(:thumb), height: '150', width: '175' %></td>


              <td><%= articulo.nombre %></td>
              <td><%= articulo.stock %> </td>
              
              <td><%= articulo.precio_venta %></td>

              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  
</section>