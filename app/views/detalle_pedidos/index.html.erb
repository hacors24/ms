<div class="panel panel-primary">
  <h3> Detalle de pedido</h3>
  <span class="tn btn-success btn-lg bt pull-right glyphicon glyphicon-plus"><%= link_to 'Crear Detalle de Pedido',new_detalle_pedido_path %></span>
</div>

<table class="table">
  <thead>
  <tr>
    <th>Cantidad</th>
    <th>Precio Unitario</th>
    
  </tr>
  </thead>
  <tbody>
  <% @detalle_pedidos.each do |detalle_pedido|%>
      <tr>
        <td><%=detalle_pedido.cantidad %></td>
        <td><%=detalle_pedido.precio_unitario %> </td>
        
        <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar', detalle_pedido %> </td>
        <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar',edit_detalle_pedido_path(detalle_pedido) %></td>
        <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to'Eliminar', detalle_pedido , method: :delete, data: {confirm: 'Esta seguro?'} %> </td>
      </tr>
  <%end%>
  </tbody>
</table>
<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @posts %>
    </div>
    <%= will_paginate @posts, :container => false %>
</div>