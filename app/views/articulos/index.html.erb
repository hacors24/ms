
<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listado <small>Articulos</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">articulos</li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_articulo_path(@articulo), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              New Articulo
            <% end %>
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
              <th>Nombre</th>
              <th>Stock</th>
              <th>Precio Compra</th>
              <th>Precio Venta </th>
              <th>Mostrar</th>
              <th>Editar</th>
              <th>Eliminar</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%= content_tag_for(:tr, @articulos) do |articulo| %>
              <td><%= articulo.nombre %></td>
              <td><%= articulo.stock %> </td>
              <td><%=articulo.precio_compra %></td>
              <td><%= articulo.precio_venta %></td>
                <td><span class="glyphicon glyphicon-play" aria-hidden="true"><%= link_to 'Mostrar', articulo %></td>
                <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"><%= link_to 'Editar', edit_articulo_path(articulo) %></td>
                <td><span class="glyphicon glyphicon-trash" aria-hidden="true"><%= link_to 'Eliminar', articulo, method: :delete, data: { confirm: 'Desea eliminar el articulo?' } %></td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @posts %>
    </div>
    <%= will_paginate @posts, :container => false %>
</div>
</section>