<div class="panel panel-primary">
  <h3> Articulos</h3>
  <span class="tn btn-success btn-lg bt pull-right glyphicon glyphicon-plus"><%= link_to 'Crear Articulo',new_articulo_path %></span>
</div>

<table class="table">
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Stock</th>
    <th >Precio Compra</th>
    <th>Precio Venta </th>
    <th>Mostrar</th>
    <th>Editar</th>
    <th>Eliminar</th>
  </tr>
  </thead>
  <tbody>
  <% @articulos.each do |articulo|%>
      <tr>
        <td><%=articulo.nombre %></td>
        <td><%= articulo.stock %> </td>
        <td> <%=articulo.precio_compra %> </td>
        <td> <%= articulo.precio_venta %></td>
        <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar', articulo %> </td>
        <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar',edit_articulo_path(articulo) %></td>
        <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to'Eliminar', articulo , method: :delete, data: {confirm: 'Esta seguro?'} %> </td>
      </tr>
  <%end%>
  </tbody>
</table>
