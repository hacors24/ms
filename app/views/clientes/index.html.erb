



<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listado <small>Clientes</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">clientes</li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_cliente_path(@cliente), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              Nuevo Cliente
            <% end %>
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
              <th>Nombres</th>
              <th>Apellidos</th>
              <th>Fecha Nacimiento</th>
              <th>Domicilio</th>
              <th>Telefono fijo </th>
              <th>Celular </th>
              <th>Email</th>
              <th>Sitio Web</th>
              <th>Comentario</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%= content_tag_for(:tr, @clientes) do |cliente| %>
        <td><%=cliente.nombres %></td>
        <td><%=cliente.apellidos %> </td>
        <td> <%=cliente.fecha_nac %> </td>
        <td> <%= cliente.domicilio %></td>
        <td> <%= cliente.telefono_fijo %></td>
        <td> <%= cliente.celular %></td>
        <td> <%= cliente.email %></td>
        <td> <%= cliente.sitio_web %></td>
        <td> <%= cliente.comentario %></td>
                <td><span class="glyphicon glyphicon-play" aria-hidden="true"><%= link_to 'Mostrar', cliente %></td>
                <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
                <td><span class="glyphicon glyphicon-trash" aria-hidden="true"><%= link_to 'Eliminar', cliente, method: :delete, data: { confirm: 'Desea eliminar el cliente?' } %></td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @posts %>
    </div>
    <%= will_paginate @posts, :container => false %>
</div>
</section>