<div class="panel panel-primary">
  <h3> Clientes</h3>
  <span class="tn btn-success btn-lg bt pull-right glyphicon glyphicon-plus"><%= link_to 'Crear Cliente',new_cliente_path %></span>
  <%= link_to 'Volver al Menu', controller: 'welcome' %>
</div>

<table class="table">
  <thead>
  <tr>
    <th>Nombres</th>
    <th>Apellidos</th>
    <th >Fecha Nacimiento</th>
    <th>Razon Social </th>
    <th>Domicilio</th>
    <th>Telefono fijo </th>
    <th>Email</th>
    <th>Sitio Web</th>
    <th>Comentario</th>
  </tr>
  </thead>
  <tbody>
  <% @clientes.each do |cliente|%>
      <tr>
        <td><%=cliente.nombres %></td>
        <td><%=cliente.apellidos %> </td>
        <td> <%=cliente.fecha_nac %> </td>
        <td> <%= cliente.razon_social %></td>
        <td> <%= cliente.domicilio %></td>
        <td> <%= cliente.telefono_fijo %></td>
        <td> <%= cliente.celular %></td>
        <td> <%= cliente.email %></td>
        <td> <%= cliente.sitio_web %></td>
        <td> <%= cliente.comentario %></td>
        <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar', cliente %> </td>
        <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar',edit_cliente_path(cliente) %></td>
        <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to'Eliminar', cliente , method: :delete, data: {confirm: 'Esta seguro?'} %> </td>
      </tr>
  <%end%>
  </tbody>
</table>
<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @posts %>
    </div>
    <%= will_paginate @posts, :container => false %>
</div>
