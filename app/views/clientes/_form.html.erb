<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for(@cliente, :html => { :role => "form" }) do |f| %>
        <% if @cliente.errors.any? %>
        
 

        <div class="alert alert-danger alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>

        <h2><%= pluralize(@cliente.errors.count, "error") %> Prohibido guardar este cliente:</h2>

        <ul>
          <% @cliente.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :nombres %>
      <%= f.text_field :nombres, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :apellidos %>
      <%= f.text_field :apellidos, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :fecha_nac %>
      <%= f.date_select :fecha_nac, :start_year => Time.now.year - 100, :end_year => Time.now.year - 18, :prompt => [], :class => "form-control"  %>

    </div>
    <div class="form-group">
      <%= f.label :razon_social %>
      <%= f.text_field :razon_social, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :domicilio %>
      <%= f.text_field :domicilio, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :telefono_fijo %>
      <%= f.text_field :telefono_fijo, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :celular %>
      <%= f.text_field :celular, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :sitio_web %>
      <%= f.text_field :sitio_web, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :comentario %>
      <%= f.text_area :comentario, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
<% end %>
 </div>
  </div>
</section>