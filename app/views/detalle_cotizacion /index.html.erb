<div class="panel panel-primary">
  <h3> Detalle de cotizacion</h3>
  <span class="tn btn-success btn-lg bt pull-right glyphicon glyphicon-plus"><%= link_to 'Crear Detalle de Cotizacion',new_detalle_cotizacion_path %></span>
</div>

<table class="table">
  <thead>
  <tr>
    <th>Cantidad</th>
    <th>Precio Unitario</th>
    
  </tr>
  </thead>
  <tbody>
  <% @detalle_cotizaciones.each do | |%>
      <tr>
        <td><%=detalle_cotizacion.cantidad %></td>
        <td><%=detalle_cotizacion.precio_unitario %> </td>
        
        <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar', detalle_cotizacion %> </td>
        <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar',edit_cliente_path(detalle_cotizacion) %></td>
        <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to'Eliminar', detalle_cotizacion , method: :delete, data: {confirm: 'Esta seguro?'} %> </td>
      </tr>
  <%end%>
  </tbody>
</table>
