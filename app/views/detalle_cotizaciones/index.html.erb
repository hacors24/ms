<div class="panel panel-primary">
  <h3> Detalle de cotizacion</h3>
  <span class="tn btn-success btn-lg bt pull-right glyphicon glyphicon-plus"><%= link_to 'Crear Detalle de Cotizacion',new_detalle_cotizacione_path %></span>
</div>

<table class="table">
  <thead>
  <tr>
    <th>Cantidad</th>
    <th>Precio Unitario</th>
    
  </tr>
  </thead>
  <tbody>
  <% @detalle_cotizaciones.each do |detalle_cotizacion|%>
      <tr>
        <td><%=detalle_cotizacion.cantidad %></td>
        <td><%=detalle_cotizacion.precio_unitario %> </td>
        <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar', :action => :show, :id => detalle_cotizacion.id %> </td>
        <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar',:action => :edit, :id => detalle_cotizacion.id %></td>
        <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to'Eliminar', {:controller => :detalle_cotizaciones, :action => 'destroy', :id => detalle_cotizacion.id }, :method => :delete , data: {confirm: 'Esta seguro?'} %> </td>
      </tr>
  <%end%>
  </tbody>
</table>
<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @posts %>
    </div>
    <%= will_paginate @posts, :container => false %>
</div>