
<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listado <small>Ventas</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">ventas</li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_venta_path(@venta), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              Nueva Venta
            <% end %>
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
              <th>Cliente</th>
              <th>Fecha Venta</th>
              <th>Tipo Documento</th>
              <th>Descripcion </th>
              <th>Mostrar</th>
              <th>Editar</th>
              <th>Eliminar</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%= content_tag_for(:tr, @ventas) do |venta| %>
            <td><%=venta.cliente.nombres %></td>
            <td><%=venta.fecha_venta %> </td>
            <td> <%=venta.tipo_documento %> </td>
            <td> <%=venta.descripcion %></td>
                 <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar', :action => :show, :id => venta.id %> </td>
                 <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar',:action => :edit, :id => venta.id %></td>
                 <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to"delete", {:controller => :ventas, :action => 'destroy', :id => venta.id }, :method => :delete , data: {confirm: 'Esta seguro?'} %> </td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @posts %>
    </div>
    <%= will_paginate @posts, :container => false %>
</div>
</section>