<div class="panel panel-primary">
  <h3> Ventas</h3>
  <span class="tn btn-success btn-lg bt pull-right glyphicon glyphicon-plus"><%= link_to 'Crear Venta',new_venta_path %></span>
  <%= link_to 'Volver al Menu', controller: 'welcome' %>
</div>

<table class="table">
  <thead>
  <tr>
    <th>Cliente</th>
    <th>Fecha Venta</th>
    <th>Tipo Documento</th>
    <th>Descripcion </th>
    <th>Mostrar</th>
    <th>Editar</th>
    <th>Eliminar</th>
  </tr>
  </thead>
  <tbody>
  <% @ventas.each do |venta|%>
      <tr>
        <td><%=venta.cliente.nombres %></td>
        <td><%=venta.fecha_venta %> </td>
        <td> <%=venta.tipo_documento %> </td>
        <td> <%=venta.descripcion %></td>
        <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar', :action => :show, :id => venta.id %> </td>
        <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar',:action => :edit, :id => venta.id %></td>
        <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to"delete", {:controller => :ventas, :action => 'destroy', :id => venta.id }, :method => :delete , data: {confirm: 'Esta seguro?'} %> </td>
      </tr>
  <%end%>
  </tbody>
</table>
<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @posts %>
    </div>
    <%= will_paginate @posts, :container => false %>
</div>