

<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Mostrar <small>Cotizacion</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li><%= link_to "cotizaciones", cotizacions_path %></li>
      <li class="active">Mostrar</li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to edit_cotizacion_path(@cotizacion), :class => 'btn btn-primary' do %>
              <span class="glyphicon glyphicon-pencil"></span>
              Editar
            <% end %>          
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
            <dt>Cliente:</dt>
            <dd><%= @cotizacion.cliente.nombres.to_s %></dd>

            <dt>Fecha Cotizacion: </dt>
            <dd><%= @cotizacion.fecha_acotizacion.to_s %></dd>

            <dt>Fecha T Cotizacion: </dt>
            <dd><%= @cotizacion.fecha_tcotizacion.to_s %></dd>

            <dt>Descuento: </dt>
            <dd><%= @cotizacion.descuento.to_s %></dd>

            <dt>Descripci√≥n: </dt>
            <dd><%= @cotizacion.descripcion.to_s %></dd>

          </dl>
        </div>
      </div>
    </div>
  </div>
  <%= link_to 'Atras', cotizacions_path, :class => 'btn btn-success'%>

</section>