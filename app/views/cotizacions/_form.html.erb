
<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for(@cotizacion, :html => { :role => "form" }) do |f| %>
        <% if @cotizacion.errors.any? %>
        


        <div class="alert alert-danger alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>

        <h2><%= pluralize(@cotizacion.errors.count, "error") %> Prohibido guardar esta Cotizacion:</h2>

        <ul>
          <% @cotizacion.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :cliente_id%>
      <%= f.select('cliente_id', Cliente.all.collect{|c| [c.nombres, c.id]}) %>
    </div>
    <div class="form-group">
      <%= f.label :fecha_acotizacion%>
      <%= f.date_select :fecha_acotizacion, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :fecha_tcotizacion%>
      <%= f.date_select :fecha_tcotizacion, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :descuento%>
      <%= f.text_area :descuento, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :descripcion %>
      <%= f.text_area :descripcion, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
<% end %>
 </div>
  </div>
</section>