<%=  form_for(@cotizacion) do |f| %>
    <% if @cotizacion.errors.any? %>
        <div id="error_explanation"> </div>
        <h2><%= pluralize(@cotizacion.errors.count, "error") %> Prohibido guardar esta cotizacion:</h2>

        <ul>
          <% @cotizacion.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :cliente_id%>
      <%= f.select('cliente_id', Cliente.all.collect{|c| [c.nombres, c.id]}) %>
    </div>
    <div class="field">
      <%= f.label :fecha_acotizacion%>
      <%= f.date_select :fecha_acotizacion%>
    </div>
    <div class="field">
      <%= f.label :fecha_tcotizacion%>
      <%= f.date_select :fecha_tcotizacion %>
    </div>
    <div class="field">
      <%= f.label :descuento%>
      <%= f.text_area :descuento%>
    </div>
    <div class="field">
      <%= f.label :descripcion %>
      <%= f.text_area :descripcion %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
