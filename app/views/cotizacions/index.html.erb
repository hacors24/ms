<div class="panel panel-primary">
  <h3> Cotizaciones</h3>
  <span class="tn btn-success btn-lg bt pull-right glyphicon glyphicon-plus"><%= link_to 'Crear cotizacion',new_cotizacion_path %></span>
  <%= link_to 'Volver al Menu', controller: 'welcome' %>
</div>

<table class="table">
  <thead>
  <tr>
    <th>Cliente id</th>
    <th>Fecha cotizacion</th>
    <th>Fecha T cotizacion</th>
    <th>Descuento</th>
     <th>Descripcion</th>
    <th>Mostrar</th>
    <th>Editar</th>
    <th>Eliminar</th>
  </tr>
  </thead>
  <tbody>
  <% @cotizaciones.each do |cotizacion|%>
      <tr>
        <td><%=cotizacion.cliente.nombres %></td>
        <td><%= cotizacion.fecha_acotizacion %> </td>
        <td> <%=cotizacion.fecha_tcotizacion %> </td>
        <td> <%= cotizacion.descuento %></td>
        <td> <%= cotizacion.descripcion %></td>
        <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar', cotizacion %> </td>
        <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar',edit_cotizacion_path(cotizacion) %></td>
        <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to'Eliminar', cotizacion , method: :delete, data: {confirm: 'Esta seguro?'} %> </td>
      </tr>
  <%end%>
  </tbody>
</table>
