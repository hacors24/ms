
<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listado <small>Cotizaciones</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">cotizaciones</li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_cotizacion_path(@cotizacion), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              Nueva Cotizacion
            <% end %>
          </div>
        </div>
        
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
              <th>Cliente</th>
              <th>Fecha cotizacion</th>
              <th>Fecha termino cotizacion</th>
              <th>Descuento</th>
              <th>Descripcion</th>
              <th>Mostrar</th>
              <th>Editar</th>
              <th>Eliminar</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%= content_tag_for(:tr, @cotizaciones) do |cotizacion| %>


                 <td><%=cotizacion.cliente.nombres%></td>
                 <td><%= cotizacion.fecha_acotizacion %> </td>
                 <td> <%=cotizacion.fecha_tcotizacion %> </td>
                 <td> <%= cotizacion.descuento %></td>
                 <td> <%= cotizacion.descripcion %></td>
                <td><span class="glyphicon glyphicon-play" aria-hidden="true"><%= link_to 'Mostrar', cotizacion %></td>
                <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"><%= link_to 'Editar', edit_cotizacion_path(cotizacion) %></td>
                <td><span class="glyphicon glyphicon-trash" aria-hidden="true"><%= link_to 'Eliminar', cotizacion, method: :delete, data: { confirm: 'Desea eliminar el articulo?' } %></td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  
</section>